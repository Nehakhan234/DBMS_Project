doctype html
html
  head
  title=title
  style.
    body{   
            background-color:black;
            font-size:20px;
            color:white;
       }
    h1{   
          text-align:center;
          font-size:30px;
      }  
  body
    h1 Staff Details!
    form(method='get', action='http://127.0.0.1:6060/st')
      button(type='submit') Add Details
    table(border='3' align='center')
     thead
       tr
         th Staff ID
         th Name
         th Contact No
         th DOB
         th Gender
         th Address
         th Designation
         th Salary
         th Delete
      tbody
      -each item in userresults
        tr
          td=item.s_id
          td=item.name
          td=item.contact_no
          td=`${item.dob.getDate()}/${1+item.dob.getMonth()}/${item.dob.getYear()+1900}`
          td=item.gender
          td=item.address 
          td=item.post 
          td=item.salary
          td: a(href='http://127.0.0.1:6060/delete?id='+item.s_id) Delete
  br
  br