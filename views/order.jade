      label First name:
      input(type='text', name='firstname')
      label Last name:
      input(type='text', name='lastname')
      br
      br
      label Delivery Address:
      textarea(name='Address')  
      br
      br
      label Contact no:
      input(type='number', name='contact no')
      br
      br
      label Date:
      input(type='date', name='date')
      br
      br
      label Items:
      textarea(name='items')
      br
      br
      label Quantity:
      input(type='number')
      br
      br
      input(type='submit', value='ORDER', item-width='20px')
      button(type='submit', item-width='200px')  MENU   
